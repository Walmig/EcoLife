                            <div class="flex justify-between text-xs">
                                <span class="text-gray-600">Sobrepeso</span>
                                <span class="font-medium">25 - 29.9</span>
                            </div>
                            <div class="flex justify-between text-xs">
                                <span class="text-gray-600">Obesidade</span>
                                <span class="font-medium">≥ 30</span>
                            </div>
